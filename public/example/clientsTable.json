{
  "ROOT": {
    "type": "div",
    "nodes": [
      {
        "type": "Container",
        "props": {
          "style": {
            "flexDirection": "column",
            "width": "100%"
          }
        },
        "nodes": [
          {
            "type": "Block",
            "props": {
              "transparent": true
            },
            "nodes": [
              {
                "type": "div",
                "props": {
                  "children": "Clients",
                  "style": {
                    "fontSize": "32px"
                  }
                }
              }
            ]
          },
          {
            "type": "Block",
            "nodes": [
              {
                "type": "Container",
                "props": {
                  "style": {
                    "flexDirection": "column",
                    "borderRadus": "16px",
                    "backgroundColor": "#fff"
                  }
                },
                "nodes": [
                  {
                    "type": "Table",
                    "props": {
                      "pagination": {
                        "topControls": [
                          {
                            "type": "Container",
                            "props": {
                              "style": {
                                "flexDirection": "row"
                              }
                            },
                            "nodes": [
                              {
                                "type": "Conditional",
                                "props": {
                                  "condition": {
                                    "$type": "$expression",
                                    "expression": "data('$context.currentPage') > 0"
                                  },
                                  "ifTrue": [
                                    {
                                      "type": "Button",
                                      "props": {
                                        "specialType": "arrowLeft",
                                        "type": "text",
                                        "style": "& div:last-child{color:#e95c5c;}",
                                        "onClick": {
                                          "$type": "$action",
                                          "path": "$context.goToPage",
                                          "args": [
                                            {
                                              "$type": "$expression",
                                              "expression": "data('$context.currentPage') - 1"
                                            }
                                          ]
                                        }
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "type": "Conditional",
                                "props": {
                                  "condition": {
                                    "$type": "$expression",
                                    "expression": "data('$context.currentPage') < (data('$context.pagesCount') - 1)"
                                  },
                                  "ifTrue": [
                                    {
                                      "type": "Button",
                                      "props": {
                                        "specialType": "arrowRight",
                                        "type": "text",
                                        "style": "& div:last-child{color:#e95c5c;}",
                                        "onClick": {
                                          "$type": "$action",
                                          "path": "$context.goToPage",
                                          "args": [
                                            {
                                              "$type": "$expression",
                                              "expression": "data('$context.currentPage') + 1"
                                            }
                                          ]
                                        }
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        ]
                      },
                      "entity": {
                        "$type": "$data",
                        "path": "$store.apis.custodian.client"
                      },
                      "columnComponents": [
                        {
                          "headerCell": {
                            "type": "Container",
                            "props": {
                              "style": {
                                "flexDirection": "row"
                              },
                              "children": "Id"
                            }
                          },
                          "bodyCell": {
                            "type": "Container",
                            "props": {
                              "style": {
                                "flexDirection": "row"
                              },
                              "children": {
                                "$type": "$data",
                                "path": "$context.id"
                              }
                            }
                          }
                        },
                        {
                          "bodyCell": {
                            "type": "Link",
                            "props": {
                              "to": {
                                "$type": "$data",
                                "path": "$context",
                                "template": "/client/{{value.id}}"
                              },
                              "children": {
                                "$type": "$data",
                                "path": "$context.name",
                                "template": "Client {{value}} {{{value.0}}}"
                              }
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
